<resources>
    <!-- Base application theme. -->
    <style name="Base.Theme.AppLock" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowLightStatusBar">?attr/isLightTheme</item>

        <item name="android:colorBackground">@color/colorBackground</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorSurface">@color/colorSurface</item>
        <item name="colorSurfaceVariant">@color/colorSurfaceVariant</item>
        <item name="colorSecondaryContainer">@color/colorSecondaryContainer</item>
    </style>

    <style name="DefaultCard" parent="Widget.Material3.CardView.Filled" >
        <item name="android:layout_marginHorizontal">20dp</item>
        <item name="android:layout_marginVertical">5dp</item>
    </style>

    <style name="Theme.AppLock" parent="Base.Theme.AppLock" />
</resources>